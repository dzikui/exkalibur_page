<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res/pl.exkalibur.AppXkalibur"
                                    android:layout_width="match_parent"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    card_view:cardCornerRadius="5dp"
                                    card_view:elevation="2dp"
                                    android:translationZ="2dp"
                                    android:layout_height="match_parent">
    <ImageButton
            android:id="@+id/info_button"
            android:layout_width="@dimen/round_button_diameter"
            android:layout_height="@dimen/round_button_diameter"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="@dimen/info_button_margin"
            android:layout_marginEnd="@dimen/info_button_margin"
            android:src="@android:drawable/ic_menu_info_details"
            android:background="@drawable/oval_ripple"
            android:elevation="@dimen/elevation_high"
            android:translationZ="@dimen/elevation_low"
            android:stateListAnimator="@anim/button_elevation"
            android:onClick="showBoxer"/>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    
    <ImageView android:layout_width="match_parent"
               android:layout_height="150dp"
               android:scaleType="centerCrop"
               android:clickable="true"
               android:focusable="true"
               android:layout_centerInParent="true"
               android:background="?android:selectableItemBackground"
               android:id="@+id/boxerImage"
               android:onClick="showBoxer"
/>


    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:background="?android:selectableItemBackground"
              android:padding="5dp"
              android:textSize="12sp"
              android:textColor="@color/material_deep_teal_500"
              android:focusable="true"
              android:clickable="true"
              android:id="@+id/boxerName"/>

</LinearLayout>
</android.support.v7.widget.CardView>